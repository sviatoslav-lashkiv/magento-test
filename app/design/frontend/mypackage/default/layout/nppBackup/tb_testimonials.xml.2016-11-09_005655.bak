<?xml version="1.0" ?>
<layout>
    <tbtestimonials_index_index   >
        <reference name="content">
            <block type="page/html" name="root" output="toHtml" template="page/2columns-right.phtml">
							<block type="tbtestimonials/testimonials" template="tb_testimonials/index.phtml" /> 
						</block>
        </reference>
    </tbtestimonials_index_index>
    <tbtestimonials_index_view>
        <reference name="content">
            <block type="tbtestimonials/view" name="testimonials.content" template="tb_testimonials/view.phtml" />
        </reference>
    </tbtestimonials_index_view>
	
	
	<tb_testimonials_index_new>
        <reference name="content">
            <block type="testimonials/form_container" name="testimonials.form.container"
                       template="tb_testimonials/form/container.phtml">
            	<block type="testimonials/form_form" name="testimonials.form"
            		   template="tb_testimonials/form/form.phtml" as="testimonials_form">
                    <block type="captcha/captcha" name="testimonials.captcha">
                        <reference name="head">
                            <action method="addJs"><file>mage/captcha.js</file></action>
                        </reference>
                        <action method="setFormId">
                            <formId>testimonials_form</formId>
                        </action>
                        <action method="setImgWidth">
                            <width>230</width>
                        </action>
                        <action method="setImgHeight">
                            <width>50</width>
                        </action>
                    </block>
                </block>
            </block>
        </reference>
    </tb_testimonials_index_new>
	
	
</layout>